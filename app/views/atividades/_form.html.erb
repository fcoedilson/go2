<%= form_for @atividade, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @atividade.errors.size > 0 %>
    <div id="error_explanation">
      <h2>
        <%= @atividade.errors.size %> errors prohibited this <%= @atividade.class.model_name.human %> from being saved:
      </h2>
      <ul>
        <% for message in @atividade.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descricao, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descricao, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                atividades_path, :class => 'btn' %>
  </div>
<% end %>
